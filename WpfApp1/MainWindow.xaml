<!-- Fenêtre principale de l'application -->
<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Générateur de Dictionnaire"
        Height="680" Width="520"
        WindowStartupLocation="CenterScreen"
        Background="#F8FAFC"
        ResizeMode="CanMinimize"
        FontFamily="Segoe UI"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">

    <!-- Ressources et styles réutilisables pour l'interface -->
    <Window.Resources>
        <!-- Dégradé de couleur bleu utilisé pour les éléments principaux -->
        <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#2563EB" Offset="0"/>
            <GradientStop Color="#3B82F6" Offset="1"/>
        </LinearGradientBrush>

        <!-- Style personnalisé pour les champs de texte (TextBox) -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#2563EB"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style pour le bouton d'action principal -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="10" 
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Grille principale contenant tous les éléments -->
    <Grid>
     
        <!-- Visionneuse à défilement pour s'assurer que tout le contenu est visible -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <!-- Conteneur principal avec style de carte (ombre, coins arrondis) -->
            <Border Width="450" 
                    Margin="20,30" 
                    Background="White" 
                    CornerRadius="16" 
                    Padding="30"
                    BorderBrush="#E2E8F0"
                    BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" 
                                      ShadowDepth="2" 
                                      Opacity="0.08" 
                                      Color="#1E293B"/>
                </Border.Effect>

                <!-- Panneau vertical pour organiser les contrôles les uns sous les autres -->
                <StackPanel>
                    <!-- Titre principal de l'application -->
                    <TextBlock Text="Générateur de Dictionnaire" 
                               FontSize="24" 
                               FontWeight="SemiBold" 
                               Foreground="#0F172A" 
                               HorizontalAlignment="Center"/>
                    <!-- Sous-titre descriptif -->
                    <TextBlock Text="Configurez vos paramètres de génération" 
                               FontSize="13" 
                               Foreground="#64748B" 
                               HorizontalAlignment="Center" 
                               Margin="0,6,0,25"/>

                    <!-- Section pour définir la longueur des mots -->
                    <TextBlock Text="Longueur des mots de passe" 
                               FontWeight="SemiBold" 
                               Foreground="#1E293B" 
                               Margin="0,0,0,10" 
                               FontSize="14"/>
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <!-- Champ pour la longueur minimale -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Minimum" 
                                       Foreground="#94A3B8" 
                                       FontSize="11" 
                                       Margin="5,0,0,4"/>
                            <TextBox x:Name="TxtMinLength" 
                                     Style="{StaticResource ModernTextBox}" 
                                     HorizontalContentAlignment="Center"/>
                        </StackPanel>
                        <!-- Champ pour la longueur maximale -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Maximum" 
                                       Foreground="#94A3B8" 
                                       FontSize="11" 
                                       Margin="5,0,0,4"/>
                            <TextBox x:Name="TxtMaxLength" 
                                     Style="{StaticResource ModernTextBox}" 
                                     HorizontalContentAlignment="Center"/>
                        </StackPanel>
                    </Grid>

                    <!-- Ligne de séparation visuelle -->
                    <Rectangle Height="1" Fill="#E2E8F0" Margin="0,0,0,20"/>

                    <!-- Section pour sélectionner les jeux de caractères -->
                    <TextBlock Text="Jeux de caractères" 
                               FontWeight="SemiBold" 
                               Foreground="#1E293B" 
                               Margin="0,0,0,12" 
                               FontSize="14"/>
                    <Border Background="#F8FAFC" 
                            CornerRadius="10" 
                            Padding="15" 
                            Margin="0,0,0,10"
                            BorderBrush="#E2E8F0"
                            BorderThickness="1">
                        <UniformGrid Columns="2">
                            <CheckBox x:Name="ChkLower" Content="Minuscules (a-z)" IsChecked="True" Margin="0,4"/>
                            <CheckBox x:Name="ChkUpper" Content="Majuscules (A-Z)" Margin="0,4"/>
                            <CheckBox x:Name="ChkDigits" Content="Chiffres (0-9)" Margin="0,4"/>
                            <CheckBox x:Name="ChkSpecial" Content="Spéciaux (# $ % @)" Margin="0,4"/>
                        </UniformGrid>
                    </Border>

                    <!-- Section pour les caractères personnalisés ajoutés par l'utilisateur -->
                    <TextBlock Text="Entrez les caractères personnalisés" 
                               Foreground="#64748B" 
                               FontSize="12" 
                               Margin="5,10,0,5"/>
                    <TextBox x:Name="TxtCharacters" 
                             Style="{StaticResource ModernTextBox}" 
                             Margin="0,0,0,20"/>

                    <!-- Ligne de séparation visuelle -->
                    <Rectangle Height="1" Fill="#E2E8F0" Margin="0,0,0,20"/>

                    <!-- Section pour définir le fichier de sortie -->
                    <TextBlock Text="Destination du fichier" 
                               FontWeight="SemiBold" 
                               Foreground="#1E293B" 
                               Margin="0,0,0,12" 
                               FontSize="14"/>
                    <Grid Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <!-- Champ affichant le chemin du fichier (non modifiable) -->
                        <TextBox x:Name="TxtOutputPath" 
                                 IsReadOnly="True" 
                                 Style="{StaticResource ModernTextBox}" 
                                 Foreground="#64748B" 
                                 FontSize="12"/>
                        <!-- Bouton pour ouvrir la boîte de dialogue de sauvegarde -->
                        <Button Grid.Column="1" 
                                x:Name="BtnBrowse" 
                                Content="Parcourir" 
                                Click="BtnBrowse_Click"
                                Margin="10,0,0,0" 
                                Padding="18,0" 
                                Height="45" 
                                Background="#F1F5F9" 
                                BorderBrush="#CBD5E1" 
                                BorderThickness="1"
                                Foreground="#334155" 
                                Cursor="Hand"
                                FontWeight="Medium">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="8"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Grid>

                    <!-- Section pour afficher la progression de la génération -->
                    <StackPanel Margin="0,0,0,20">
                        <DockPanel LastChildFill="False">
                            <!-- Texte indiquant l'état actuel (ex: "Génération en cours...") -->
                            <TextBlock x:Name="LblStatus" 
                                       Text="Prêt à générer" 
                                       FontSize="12" 
                                       Foreground="#64748B"/>
                            <!-- Pourcentage de progression -->
                            <TextBlock x:Name="LblPercentage" 
                                       Text="0%" 
                                       FontWeight="SemiBold" 
                                       Foreground="#2563EB" 
                                       DockPanel.Dock="Right" 
                                       Visibility="Hidden"/>
                        </DockPanel>
                        <!-- Barre de progression visuelle -->
                        <ProgressBar x:Name="ProgressBarGen" 
                                     Height="6" 
                                     Margin="0,8,0,0" 
                                     Foreground="{StaticResource PrimaryGradient}" 
                                     Background="#E2E8F0" 
                                     BorderThickness="0">
                            <ProgressBar.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="3"/>
                                </Style>
                            </ProgressBar.Resources>
                        </ProgressBar>
                    </StackPanel>

                    <!-- Bouton principal pour lancer le processus de génération -->
                    <Button x:Name="BtnGenerate" 
                            Content="LANCER LA GÉNÉRATION" 
                            Height="52" 
                            Click="BtnGenerate_Click"
                            Style="{StaticResource ActionButtonStyle}" 
                            FontWeight="SemiBold" 
                            FontSize="14" 
                            Cursor="Hand">
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="12" 
                                              ShadowDepth="2" 
                                              Opacity="0.2" 
                                              Color="#2563EB"/>
                        </Button.Effect>
                    </Button>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Window>